{{#partial "content"}}

    {{#if editArtist}}
        <h1>Edit this artist!</h1>
        <form action="/categories/update" method="post">
            <select name="editCategoryId" id="editCategoryId">
                {{#each categories }}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <label for="name">Edit this category's name</label>
            <input id="newCategoryName" name="newCategoryName" type="text" placeholder="new category name">

    {{else}}
            <h1>Add a new Category!</h1>
    {{/if}}
    <button type="submit" class="btn btn-default">Go!</button>
    </form>form>
{{/partial}}

{{> layout.hbs}}