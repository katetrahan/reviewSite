
{{#partial "content"}}

    {{#if editArtists}}
        <form action="/artists/update" method = "post">
            <h1>Edit this artist</h1>
        </form>
        <select id = "artistToEdit" name = "artistToEdit">
            {{#each artists}}
                <option value="{{artistId}}">{{name}}</option>
            {{/each}}
        </select>
        <br>
        <label for="name">Edit this artist's name</label>
        <input id="name" name="name" type="text" placeholder="Enter a new name">
        <br>
        <button type="submit" class="btn btn-default">Go!</button>



    {{else}}
    <h2>Add a new artist</h2>

        <h1>Add an artist!</h1>

        <form action="/artists/new" method="post">
            <label for="name">Artist Name</label>
            <input id="name" name="name" type="text">


            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}